@model XMLFileDifference.Models.XmlDiffModel

@{
    ViewBag.Title = "XML Differences";
}

<h2>XML Differences</h2>

<div>
    <strong>Version:</strong> @Model.Version
</div>
<div>
    <strong>SrcDocHash:</strong> @Model.SrcDocHash
</div>
<div>
    <strong>Options:</strong> @Model.Options
</div>
<div>
    <strong>Fragments:</strong> @Model.Fragments
</div>

@if (Model.Nodes != null && Model.Nodes.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Match</th>
                <th>Change Type</th>
                <th>Attribute Name</th>
                <th>Old Value</th>
                <th>New Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var node in Model.Nodes)
            {
                <tr>
                    <td>@node.Match</td>
                    <td>@node.ChangeType</td>
                    <td>@node.AttributeName</td>
                    <td>@node.OldValue</td>
                    <td>@node.NewValue</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No XML differences found.</p>
}

